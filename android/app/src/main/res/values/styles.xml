<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Adds the splash screen definition -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/background_splash_light</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/splashscreen_bg_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="splashBackgroundColor">@color/splashscreen_bg_light</item>
        <item name="splashBackground">@drawable/background_splash_light</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/splashscreen_bg_dark</item>
        <item name="splashBackgroundColor">@color/splashscreen_bg_dark</item>
        <item name="splashBackground">@drawable/background_splash_dark</item>
    </style>

</resources>